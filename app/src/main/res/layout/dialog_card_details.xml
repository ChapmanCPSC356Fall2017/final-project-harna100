<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <!--title-->
            <TextView
                android:id="@+id/tv_dialogPlaceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="The Place"
                android:gravity="center_horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:autoSizeMaxTextSize="24sp"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeTextType="uniform"
                android:maxLines="2"
                android:textSize="24sp"
                android:paddingBottom="5dp"
                android:layout_gravity="center_horizontal"/>

            <!--picture-->
            <ImageView
                android:id="@+id/iv_dialogPlacePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:minHeight="150dp"
                tools:src="@drawable/common_full_open_on_phone"/>

            <!--address-->
            <TextView
                android:id="@+id/tv_dialogPlaceAddress"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:autoSizeTextType="uniform"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"/>

            <!--hours-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Hours"
                android:layout_marginTop="5dp"/>
            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/tv_dialogHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Monday: 10:00 AM – 10:00 PM
Tuesday: 10:00 AM – 10:00 PM
Wednesday: 10:00 AM – 10:00 PM
Thursday: 10:00 AM – 10:00 PM
Friday: 10:00 AM – 11:00 PM
Saturday: 10:00 AM – 11:00 PM
Sunday: 10:00 AM – 11:00 PM"
                android:layout_gravity="center_horizontal"/>
            <!--distance-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approx Distance: "/>
                <TextView
                    android:id="@+id/tv_dialogDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="3 mi."/>
            </LinearLayout>
            <!--phone-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number: "/>
                <TextView
                    android:id="@+id/tv_dialogPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="(714) 997-6815"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_dialogDismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dismiss"
                android:layout_marginBottom="24dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>